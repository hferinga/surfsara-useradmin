<div id="wrapper">
      <div id="logo_sunstone" style="
        background: url(<%=$views_config.logo%>) no-repeat center;
        background-size: 355px;">
      </div>

      <form id="login_form">
        <div class="border" id="login" style='height:169px;background:url("../images/panel_short.png") no-repeat scroll center transparent'>
            <div id="authenticating">
              <img src="images/pbar.gif" style="margin-top: 65px;">
              <p>Authenticating...</p>
            </div>

            <div id="authFailed" style="display: none; padding-top: 65px;">
              <p>Could not authenticate.</p>
            </div>

            <div class="content" style="display: none">
                <input style="float:left;" type="submit" id="login_btn" value="" />
                <input type="checkbox" id="check_remember" />
                <label id="label_remember" for="check_remember">Keep me logged in</label>
            </div>
            <div id="error_box" class="hidden alert-box alert" style="display: none">
              <span id="auth_error">
                <p>Unable to login.</p>
                <p>If you have an account already, <a style="color: white" href="/useradmin/migrations/new">please migrate it here</a>.</p>
                <p>Otherwise, <a style="color: white" href="/useradmin/">contact an HPC Cloud administrator</a> to request an account.</p>
              </span>
              <span id="one_error"></span>
            </div>
        </div>
      </form>
</div>

<script>
  $(function() {
    setTimeout(function() {
      $(document).ajaxError(function() {
        $('#authenticating').hide();
        $('#authFailed').show();
      });

      $('#check_remember').click();
      $('#login_btn').click();
    }, 100);
  });
</script>